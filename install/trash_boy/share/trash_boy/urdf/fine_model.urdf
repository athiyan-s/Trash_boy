<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="trash_boy">

    <!-- Materials -->
    <material name="grey">
        <color rgba="0.07 0.07 0.7 1"/>        
    </material>
    <material name="green">
        <color rgba="0.0 0.6 0.0 1.0"/>
    </material>
    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>
    <material name="black">
        <color rgba="0.1 0.1 0.1 1.0"/>
    </material>
    <material name="red">
        <color rgba="0.8 0.0 0.0 1.0"/>
    </material>

    <!-- Base Links -->
    <link name="base_footprint"/>
    
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
            <material name="green"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.2"/>
            </geometry>
            <origin xyz="0 0 0.1" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="10.0"/>
            <origin xyz="0 0 0.1"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
    </link>

    <!-- IMU Sensor -->
    <link name="imu_link">
        <inertial>
            <mass value="0.01"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
        </inertial>
    </link>

    <!-- Camera -->
    <link name="camera">
        <visual>
            <geometry>
                <box size="0.1 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.05"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Top Camera - Looking Up -->
    <link name="top_camera">
        <visual>
            <geometry>
                <box size="0.1 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 0.05 0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.05"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- 2D LiDAR Sensor -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="red"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0001" iyy="0.0001" izz="0.0001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Carrying Plate -->
    <link name="carrying_plate">
        <!-- Pillars -->
        <visual>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="0.25 0.15 0.05" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="0.25 0.15 0.05" rpy="0 0 0"/>
        </collision>
        <visual>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="0.25 -0.15 0.05" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="0.25 -0.15 0.05" rpy="0 0 0"/>
        </collision>
        <visual>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="-0.25 0.15 0.05" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="-0.25 0.15 0.05" rpy="0 0 0"/>
        </collision>
        <visual>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="-0.25 -0.15 0.05" rpy="0 0 0"/>
            <material name="grey"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.015" length="0.1"/>
            </geometry>
            <origin xyz="-0.25 -0.15 0.05" rpy="0 0 0"/>
        </collision>
        
        <!-- Plate -->
        <visual>
            <geometry>
                <box size="0.6 0.4 0.03"/>
            </geometry>
            <origin xyz="0 0 0.115" rpy="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.6 0.4 0.03"/>
            </geometry>
            <origin xyz="0 0 0.115" rpy="0 0 0"/>
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0 0 0.115" rpy="0 0 0"/>
            <inertia ixx="0.01" iyy="0.01" izz="0.01" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Mecanum Wheels -->
    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>   
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0015" iyy="0.0015" izz="0.0015" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0 0"/>   
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0015" iyy="0.0015" izz="0.0015" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>   
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0015" iyy="0.0015" izz="0.0015" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0 0"/>   
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.06"/>
            </geometry>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <inertia ixx="0.0015" iyy="0.0015" izz="0.0015" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Joints -->
    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.1" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="base_camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="camera"/>
        <origin xyz="0.35 0.0 0.15" rpy="0.0 0.0 0.0"/>
    </joint>

    <!-- Top Camera Joint - Looking Up -->
    <joint name="base_top_camera_joint" type="fixed">
        <parent link="base_link"/>
        <child link="top_camera"/>
        <origin xyz="0.0 0.0 0.35" rpy="0.0 -1.57 0.0"/>
    </joint>

    <joint name="imu_joint" type="fixed">
        <parent link="base_link"/>
        <child link="imu_link"/>
        <origin xyz="0 0 0.1" rpy="0 0 0"/>
    </joint>

    <!-- LiDAR Joint - Positioned between base and carrying plate -->
    <joint name="base_lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="0.0 0.0 0.215" rpy="0 0 0"/>
    </joint>

    <joint name="base_carrying_plate_joint" type="fixed">
        <parent link="base_link"/>
        <child link="carrying_plate"/>
        <origin xyz="0.0 0.0 0.2" rpy="0 0 0"/>
    </joint>

    <!-- Mecanum Wheel Joints -->
    <joint name="front_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <origin xyz="0.2 0.23 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="front_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <origin xyz="0.2 -0.23 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <joint name="rear_left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <origin xyz="-0.2 0.23 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="rear_right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <origin xyz="-0.2 -0.23 0.0" rpy="0.0 0.0 0.0"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Gazebo Material for Links -->
    <gazebo reference="base_link">
        <material>Gazebo/Green</material>
    </gazebo>
    <gazebo reference="camera">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="top_camera">
        <material>Gazebo/White</material>
    </gazebo>
    <gazebo reference="lidar_link">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="front_left_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>
    <gazebo reference="front_right_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>
    <gazebo reference="rear_left_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>
    <gazebo reference="rear_right_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.0</mu1>
        <mu2>0.0</mu2>
        <kp>1000000.0</kp>
        <kd>100.0</kd>
    </gazebo>

    <!-- Gazebo Sensors -->
    <gazebo reference="camera">
        <sensor type="camera" name="camera_sensor">
            <pose>0 0 0 0 1.57 0</pose>
            <update_rate>30.0</update_rate>
            <camera name="front_camera">
                <horizontal_fov>1.0472</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>100.0</far>
                </clip>
            </camera>
            <plugin name="camera_plugin" filename="libgazebo_ros_camera.so">
                <ros>
                    <namespace>/front_camera</namespace>
                    <argument>image_raw:=image_raw</argument>
                </ros>
                <camera_name>front_camera</camera_name>
                <frame_name>camera</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Top Camera Sensor -->
    <gazebo reference="top_camera">
        <sensor type="camera" name="top_camera_sensor">
            <pose>0 0 0 0 0 0</pose>
            <update_rate>30.0</update_rate>
            <camera name="top_camera">
                <horizontal_fov>1.0472</horizontal_fov>
                <image>
                    <width>640</width>
                    <height>480</height>
                    <format>R8G8B8</format>
                </image>
                <clip>
                    <near>0.05</near>
                    <far>100.0</far>
                </clip>
            </camera>
            <plugin name="top_camera_plugin" filename="libgazebo_ros_camera.so">
                <ros>
                    <namespace>/top_camera</namespace>
                    <argument>image_raw:=image_raw</argument>
                </ros>
                <camera_name>top_camera</camera_name>
                <frame_name>top_camera</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <!-- 2D LiDAR Sensor Configuration -->
    <gazebo reference="lidar_link">
        <sensor type="ray" name="lidar_sensor">
            <pose>0 0 0 0 0 0</pose>
            <visualize>true</visualize>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1.0</resolution>
                        <min_angle>-3.14159</min_angle>
                        <max_angle>3.14159</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.10</min>
                    <max>12.0</max>
                    <resolution>0.01</resolution>
                </range>
                <noise>
                    <type>gaussian</type>
                    <mean>0.0</mean>
                    <stddev>0.01</stddev>
                </noise>
            </ray>
            <plugin name="lidar_plugin" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <namespace>/</namespace>
                </ros>
                <topic_name>scan</topic_name>
                <frame_name>lidar_link</frame_name>
            </plugin>
        </sensor>
    </gazebo>

    <gazebo reference="imu_link">
        <sensor type="imu" name="imu_sensor">
            <always_on>true</always_on>
            <update_rate>200</update_rate>
            <imu>
                <noise>
                    <type>gaussian</type>
                    <rate>
                        <mean>0.0</mean>
                        <stddev>0.00017</stddev>
                    </rate>
                    <accel>
                        <mean>0.0</mean>
                        <stddev>0.0017</stddev>
                    </accel>
                </noise>
            </imu>
            <plugin name="imu_plugin" filename="libgazebo_ros_imu_sensor.so">
                <ros>
                    <namespace>/</namespace>
                </ros>
                <topic_name>imu/data</topic_name>
                <frame_name>imu_link</frame_name>
                <gravity>true</gravity>
            </plugin>
        </sensor>
    </gazebo>

    <!-- Planar Move Plugin for Omnidirectional Movement -->
    <gazebo>
        <plugin name="object_controller" filename="libgazebo_ros_planar_move.so">
            <ros>
                <namespace>/</namespace>
                <remapping>cmd_vel:=cmd_vel</remapping>
            </ros>
            <update_rate>100</update_rate>
            <publish_rate>10</publish_rate>
            <publish_odom>true</publish_odom>
            <publish_odom_tf>true</publish_odom_tf>
            <odometry_frame>odom</odometry_frame>
            <robot_base_frame>base_footprint</robot_base_frame>
            <covariance_x>0.0001</covariance_x>
            <covariance_y>0.0001</covariance_y>
            <covariance_yaw>0.01</covariance_yaw>
        </plugin>
    </gazebo>

    <gazebo>
        <plugin name="joint_state_publisher" filename="libgazebo_ros_joint_state_publisher.so">
            <ros>
                <namespace>/</namespace>
            </ros>

            <update_rate>50</update_rate>

            <joint_name>front_left_wheel_joint</joint_name>
            <joint_name>front_right_wheel_joint</joint_name>
            <joint_name>rear_left_wheel_joint</joint_name>
            <joint_name>rear_right_wheel_joint</joint_name>
        </plugin>
    </gazebo>

</robot>